{
  "Routes": [
    {
      "UpstreamPathTemplate": "/v1/users",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/users",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "service-node", "Port": 3000 }
      ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 5
      }
    },
    {
      "UpstreamPathTemplate": "/v1/orders",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/orders",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "service-go", "Port": 8080 }
      ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 5
      }
    },
    {
      "UpstreamPathTemplate": "/v1/files",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/files",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "service-python", "Port": 8000 },
        { "Host": "service-python-2", "Port": 8000 }
      ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 15
      }
    },
    {
      "UpstreamPathTemplate": "/v1/sales",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/sales",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "service-java", "Port": 8080 }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 5
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:4242",
    "RateLimitOptions": {
      "DisableRateLimitHeaders": false,
      "QuotaExceededMessage": "Límite de peticiones excedido. Máximo 5 peticiones por minuto.",
      "RateLimitCounterPrefix": "ocelot-ratelimit-"
    }
  }
}